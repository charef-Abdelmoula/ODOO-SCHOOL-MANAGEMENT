<odoo>
    <data>
         <!--List view-->
        <record model="ir.ui.view" id="school_classroom_tree">
            <field name="name">school.classroom.list</field>
            <field name="model">school.classroom</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tables_number"/>
                </tree>
            </field>
        </record>
        <!--Form view-->
        <record model="ir.ui.view" id="school_classroom_form">
            <field name="name">school.classroom.form</field>
            <field name="model">school.classroom</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="tables_number" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Search view-->
        <record model="ir.ui.view" id="school_classroom_search">
            <field name="name">school.classroom.search</field>
            <field name="model">school.classroom</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Action-->
        <record model="ir.actions.act_window" id="school_classroom_action">
            <field name="name">School Classrooms</field>
            <field name="res_model">school.classroom</field>
            <field name="view_mode">tree,form,search</field>
        </record>

        <!--we ll add this menu in the root menu with a sequence="5" so
        that it will be added before the Configuration  menu which has a sequence="6"-->
        <menuitem id="school_classroom_menu"
                  name="Classrooms"
                  sequence="5"
                  parent="school_root_menu"
                  action="school_classroom_action"
        />
    </data>
</odoo>